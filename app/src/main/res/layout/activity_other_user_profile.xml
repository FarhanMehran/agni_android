<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootview_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.settings.profile.profile.ProfileActivity">
    <TextView
        android:id="@+id/tvBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:drawablePadding="4dp"
        android:gravity="center"
        android:padding="12dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/back"
        android:textAllCaps="true"
        android:textColor="@color/black50"
        app:drawableStartCompat="@drawable/ic_back_btn" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivProfilePic"
        android:layout_width="100dp"
        android:layout_marginStart="15dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvBack"
        android:src="@drawable/profile_pic_placeholder"
        android:transitionName="ivProfilePic" />

    <TextView
        app:layout_constraintStart_toEndOf="@id/ivProfilePic"
        app:layout_constraintTop_toTopOf="@id/ivProfilePic"
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:fontFamily="@font/bariol_bold"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/ivVerified"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="@dimen/_10dp"
        android:src="@drawable/ic_verify_active"
        app:layout_constraintStart_toEndOf="@id/tvUserName"
        app:layout_constraintTop_toTopOf="@id/tvUserName"
        app:layout_constraintBottom_toBottomOf="@id/tvUserName"/>

    <TextView
        app:layout_constraintStart_toEndOf="@id/ivProfilePic"
        app:layout_constraintTop_toBottomOf="@id/tvUserName"
        android:id="@+id/tvMemberSince"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:textColor="@color/black50"
        android:fontFamily="@font/bariol_regular"
        android:textSize="14sp" />
    <TextView
        app:layout_constraintStart_toEndOf="@id/ivProfilePic"
        app:layout_constraintTop_toBottomOf="@id/tvMemberSince"
        android:id="@+id/tvDescription"
        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_15dp"
        android:maxLength="150"
        android:minLines="4"
        android:ellipsize="end"
        android:layout_marginStart="15dp"
        android:textColor="@color/black50"
        android:fontFamily="@font/bariol_regular"
        android:textSize="14sp" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cvRating"
        android:layout_marginTop="20dp"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardElevation="5dp"
        android:layout_marginHorizontal="25dp"
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginVertical="15dp"
            android:layout_height="wrap_content">



        <TextView
            app:layout_constraintStart_toStartOf="@id/tvAsShopper"
            app:layout_constraintEnd_toEndOf="@id/tvAsShopper"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/tvAsShopperValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/bariol_bold"
            android:textSize="20sp" />

        <TextView
            app:layout_constraintEnd_toStartOf="@id/tvAsNomad"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvAsShopperValue"
            android:id="@+id/tvAsShopper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/as_shopper"
            android:textColor="@color/grey_error"
            android:fontFamily="@font/bariol_regular"
            android:textSize="14sp" />

            <TextView
                app:layout_constraintStart_toStartOf="@id/tvAsNomad"
                app:layout_constraintEnd_toEndOf="@id/tvAsNomad"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/tvAsNomadValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zero"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/bariol_bold"
                android:textSize="20sp" />

            <TextView
                app:layout_constraintEnd_toStartOf="@id/tvCancelled"
                app:layout_constraintStart_toEndOf="@id/tvAsShopper"
                app:layout_constraintTop_toBottomOf="@id/tvAsShopperValue"
                android:id="@+id/tvAsNomad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/as_nomad"
                android:textColor="@color/grey_error"
                android:fontFamily="@font/bariol_regular"
                android:textSize="14sp" />
            <TextView
                app:layout_constraintStart_toStartOf="@id/tvCancelled"
                app:layout_constraintEnd_toEndOf="@id/tvCancelled"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/tvCancelledValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_0"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/bariol_bold"
                android:textSize="20sp" />

            <TextView
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvAsNomad"
                app:layout_constraintTop_toBottomOf="@id/tvAsShopperValue"
                android:id="@+id/tvCancelled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancelled"
                android:textColor="@color/grey_error"
                android:fontFamily="@font/bariol_regular"
                android:textSize="14sp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/tvReviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/bariol_bold"
        android:text="@string/reviews"
        android:textColor="@color/black50"
        android:layout_marginTop="@dimen/_10dp"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cvRating" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_reviews"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/tvReviews"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        tools:listitem="@layout/item_reviews"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvReviews"
        tools:layout_editor_absoluteX="24dp" />

    <TextView
        android:id="@+id/tvNoReviewFound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvReviews"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="@dimen/dimen_24"
        android:text="@string/no_review_found"
        android:textColor="@color/black50"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvReviews" />
</androidx.constraintlayout.widget.ConstraintLayout>