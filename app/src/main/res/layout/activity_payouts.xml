<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llContainer_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    tools:ignore="Overdraw">

    <TextView
        android:id="@+id/tvBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15dp"
        android:layout_marginTop="10dp"
        android:drawablePadding="4dp"
        android:gravity="center"
        android:paddingVertical="12dp"
        android:text="@string/back"
        android:textAllCaps="true"
        android:textColor="@color/black50"
        app:drawableStartCompat="@drawable/ic_back_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPayouts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:drawablePadding="10dp"
        android:focusable="true"
        android:fontFamily="@font/bariol_regular"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="@string/payouts"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvBack" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tlSelectCountry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="50dp"
        android:textAppearance="@style/BlueHintAppearance"
        android:textColorHint="@color/black_hint"
        app:hintTextAppearance="@style/BlueHintAppearance"
        app:layout_constraintTop_toBottomOf="@id/tvPayouts">

        <TextView
            android:id="@+id/tvCountry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginBottom="5dp"
            android:hint="@string/select_country"
            android:inputType="textCapWords|textMultiLine"
            android:textColorHint="@color/black_hint"
            android:textSize="16sp"
            android:theme="@style/MyEditTextStyle2"
            app:drawableEndCompat="@drawable/ic_dropdown_arrow" />
    </com.google.android.material.textfield.TextInputLayout>


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="5dp"
        android:background="@color/gray_light"
        app:layout_constraintTop_toBottomOf="@id/tlSelectCountry" />

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="5dp"
        android:editable="false"
        android:text="@string/country_hint"
        android:textColor="@color/grey_error"
        android:textColorHint="@color/black_hint"
        android:textSize="13sp"
        android:theme="@style/MyEditTextStyle2"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/view" />

    <TextView
        android:id="@+id/tvCountryHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="22dp"
        android:editable="false"
        android:text="@string/hint"
        android:textAllCaps="true"
        android:textColorHint="@color/black_hint"
        android:textSize="13sp"
        android:theme="@style/MyEditTextStyle2"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvPayouts" />


    <Button
        android:id="@+id/btnConnectToStripe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/bg_button_disable"
        android:enabled="false"
        android:fontFamily="@font/bariol_regular"
        android:gravity="center"
        android:text="@string/connect_to_stripe"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/tvDesc" />


</androidx.constraintlayout.widget.ConstraintLayout>