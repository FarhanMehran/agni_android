<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardCornerRadius="13dp"
    app:cardElevation="8dp"
    android:id="@+id/cvItem"
    app:cardUseCompatPadding="true"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvOrderCode"
            android:fontFamily="@font/bariol_regular"
            android:textSize="13sp"
            android:textColor="@color/black50"
            android:padding="5dp"
            app:layout_constraintTop_toTopOf="@id/tvPrice"
            android:layout_marginStart="@dimen/_15dp"
            app:layout_constraintBottom_toBottomOf="@id/tvPrice"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvDate"
            android:fontFamily="@font/bariol_regular"
            android:textSize="13sp"
            android:textColor="@color/black50"
            app:layout_constraintTop_toTopOf="@id/tvPrice"
            app:layout_constraintBottom_toBottomOf="@id/tvPrice"
            android:padding="5dp"
            app:layout_constraintStart_toEndOf="@id/tvOrderCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintEnd_toStartOf="@id/btnInfo"
            android:id="@+id/tvPrice"
            android:fontFamily="@font/bariol_bold"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:padding="5dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/btnInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingStart="12dp"
            app:layout_constraintTop_toTopOf="@id/tvPrice"
            app:layout_constraintBottom_toBottomOf="@id/tvPrice"
            android:paddingTop="4dp"
            android:paddingEnd="12dp"
            android:paddingBottom="4dp"
            app:srcCompat="@drawable/ic_overflow" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cvImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvOrderCode"

            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="100dp"
            app:cardCornerRadius="8dp"
            android:layout_height="100dp">
            <ImageView
                android:id="@+id/ivImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/profile_pic_placeholder"
                android:scaleType="centerCrop" />

        </androidx.cardview.widget.CardView>



        <TextView
            android:id="@+id/tvItemName"
            android:fontFamily="@font/bariol_bold"
            android:textSize="18sp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/cvImage"
            app:layout_constraintTop_toBottomOf="@id/tvOrderCode"
            android:layout_width="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_height="wrap_content"/>


        <ImageView
            android:id="@+id/ivSource"
            app:layout_constraintStart_toEndOf="@id/cvImage"
            android:layout_marginStart="15dp"
            android:src="@drawable/drawable_source"
            app:layout_constraintTop_toBottomOf="@id/tvItemName"
            android:layout_width="18dp"
            app:layout_constraintTop_toTopOf="@id/tvSource"
            app:layout_constraintBottom_toBottomOf="@id/tvSource"
            android:layout_height="18dp"/>


        <TextView
            android:id="@+id/tvSource"
            android:fontFamily="@font/bariol_regular"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@id/ivSource"
            app:layout_constraintTop_toBottomOf="@id/tvItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/ivDestination"
            app:layout_constraintStart_toEndOf="@id/cvImage"
            android:layout_marginStart="15dp"
            android:src="@drawable/drawable_destination"
            app:layout_constraintTop_toBottomOf="@id/tvSource"
            android:layout_width="18dp"
            app:layout_constraintTop_toTopOf="@id/tvDestination"
            app:layout_constraintBottom_toBottomOf="@id/tvDestination"
            android:layout_height="18dp"/>


        <TextView
            android:id="@+id/tvDestination"
            android:fontFamily="@font/bariol_regular"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@id/ivDestination"
            app:layout_constraintTop_toBottomOf="@id/tvSource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/tvRequiredBy"
            android:fontFamily="@font/bariol_regular"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="@string/required_by"
            android:layout_marginStart="15dp"
            android:layout_marginTop="@dimen/_10dp"
            app:layout_constraintStart_toEndOf="@id/cvImage"
            app:layout_constraintTop_toBottomOf="@id/tvDestination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:id="@+id/view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cvImage"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/margin24"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="@dimen/margin24"
            android:background="@color/grey_line" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cvProfile"
            app:layout_constraintTop_toBottomOf="@id/view"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="@dimen/margin24"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="50dp"
            app:cardCornerRadius="@dimen/_15dp"
            android:layout_height="50dp">

            <ImageView
                app:layout_constraintTop_toBottomOf="@id/view"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/ivProfile"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:layout_height="match_parent"
                android:src="@drawable/profile_pic_placeholder" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvRequestedUserName"
            android:fontFamily="@font/bariol_bold"
            android:textSize="14sp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="13dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/cvProfile"
            app:layout_constraintTop_toBottomOf="@id/view"
            android:layout_width="0dp"
            app:layout_constraintEnd_toStartOf="@id/btnChat"
            android:layout_marginEnd="8dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/tvInversionTotal"
            android:fontFamily="@font/bariol_regular"
            android:textSize="12sp"
            android:textColor="@color/black50"
            android:layout_marginTop="4dp"
            android:layout_marginStart="15dp"
            app:layout_constraintEnd_toStartOf="@id/btnChat"
            app:layout_constraintStart_toEndOf="@id/cvProfile"
            app:layout_constraintTop_toBottomOf="@id/tvRequestedUserName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/btnChat"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:paddingVertical="8dp"
            android:paddingHorizontal="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_button_12dp"
            android:layout_marginBottom="@dimen/_10dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:src="@drawable/chat"
            android:layout_marginEnd="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cvProfile"
            app:layout_constraintBottom_toBottomOf="@id/cvProfile"
            app:layout_constraintTop_toBottomOf="@id/view" />

        <View
            android:id="@+id/view2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cvProfile"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/margin24"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="@dimen/margin24"
            android:background="@color/grey_line" />


        <androidx.cardview.widget.CardView
            android:id="@+id/btnMakeAnOffer"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="35dp"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="23dp"
            app:layout_constraintTop_toBottomOf="@id/view2">


            <TextView
                android:id="@+id/tvMakeAnOffer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/bariol_regular"
                android:padding="5dp"
                android:text="@string/make_an_offer"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@id/tvType"
                app:layout_constraintTop_toBottomOf="@id/tvRequiredByDate" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/grey_error"
            app:cardCornerRadius="13dp"
            app:layout_constraintTop_toBottomOf="@id/btnMakeAnOffer">


            <TextView
                android:id="@+id/tvType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/bariol_regular"
                android:padding="5dp"
                android:text="@string/pickup_delivery"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@id/tvType"
                app:layout_constraintTop_toBottomOf="@id/tvRequiredByDate" />


        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>






</androidx.cardview.widget.CardView>