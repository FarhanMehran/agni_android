<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tvOrderCode"
            android:fontFamily="@font/bariol_regular"
            android:textSize="13sp"
            android:textColor="@color/black50"
            android:padding="5dp"
            app:layout_constraintTop_toTopOf="@id/tvPrice"
            android:layout_marginStart="@dimen/_15dp"
            app:layout_constraintBottom_toBottomOf="@id/tvPrice"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvDate"
            android:fontFamily="@font/bariol_regular"
            android:textSize="13sp"
            android:textColor="@color/black50"
            app:layout_constraintTop_toTopOf="@id/tvPrice"
            app:layout_constraintBottom_toBottomOf="@id/tvPrice"
            android:padding="5dp"
            app:layout_constraintStart_toEndOf="@id/tvOrderCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/tvPrice"
            android:fontFamily="@font/bariol_bold"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:padding="5dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvImage"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/tvOrderCode"
            android:layout_width="80dp"
            app:cardCornerRadius="5dp"
            android:layout_height="80dp">
            <ImageView
                android:id="@+id/ivImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop" />


        </androidx.cardview.widget.CardView>



        <TextView
            android:id="@+id/tvItemName"
            android:fontFamily="@font/bariol_bold"
            android:textSize="18sp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/cvImage"
            app:layout_constraintTop_toBottomOf="@id/tvOrderCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>


        <ImageView
            android:id="@+id/ivSource"
            app:layout_constraintStart_toEndOf="@id/cvImage"
            android:layout_marginStart="15dp"
            android:src="@drawable/drawable_source"
            app:layout_constraintTop_toBottomOf="@id/tvItemName"
            android:layout_width="18dp"
            app:layout_constraintTop_toTopOf="@id/tvSource"
            app:layout_constraintBottom_toBottomOf="@id/tvSource"
            android:layout_height="18dp"/>


        <TextView
            android:id="@+id/tvSource"
            android:fontFamily="@font/bariol_regular"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@id/ivSource"
            app:layout_constraintTop_toBottomOf="@id/tvItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/ivDestination"
            app:layout_constraintStart_toEndOf="@id/cvImage"
            android:layout_marginStart="15dp"
            android:src="@drawable/drawable_destination"
            app:layout_constraintTop_toBottomOf="@id/tvSource"
            android:layout_width="18dp"
            app:layout_constraintTop_toTopOf="@id/tvDestination"
            app:layout_constraintBottom_toBottomOf="@id/tvDestination"
            android:layout_height="18dp"/>


        <TextView
            android:id="@+id/tvDestination"
            android:fontFamily="@font/bariol_regular"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@id/ivDestination"
            app:layout_constraintTop_toBottomOf="@id/tvSource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/tvRequiredBy"
            android:fontFamily="@font/bariol_regular"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="@string/required_by"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@id/cvImage"
            app:layout_constraintTop_toBottomOf="@id/tvDestination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/tvTypeValue"
            android:fontFamily="@font/bariol_regular"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:paddingBottom="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toEndOf="@id/cvImage"
            app:layout_constraintTop_toBottomOf="@id/tvRequiredBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clProfile"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/tvTypeValue"
            android:layout_height="wrap_content">

       <View
           app:layout_constraintTop_toTopOf="parent"
           android:id="@+id/viewDivider"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="@color/black50"/>


        <ImageView
            android:id="@+id/ivUserImage"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toBottomOf="@id/viewDivider"
            android:layout_width="40dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="@id/tvUserName"
            android:src="@drawable/profile_pic_placeholder"
            android:scaleType="centerCrop" />


        <TextView
            android:id="@+id/tvUserName"
            android:fontFamily="@font/bariol_bold"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/ivUserImage"
            app:layout_constraintTop_toBottomOf="@id/viewDivider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginBottom="10dp"
                android:id="@+id/tvDeliveryReward"
                android:fontFamily="@font/bariol_regular"
                android:textSize="12sp"
                android:textColor="@color/black50"
                android:layout_marginTop="3dp"
                android:layout_marginStart="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/ivUserImage"
                app:layout_constraintTop_toBottomOf="@id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/btnRepublish"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="15dp"
            app:layout_constraintTop_toBottomOf="@id/clProfile">


            <TextView
                android:id="@+id/tvOfferCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/bariol_regular"
                android:padding="5dp"
                android:text="@string/republish"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@id/tvType"
                app:layout_constraintTop_toBottomOf="@id/tvRequiredByDate" />


        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
