<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_details_request"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tvBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="12dp"
        android:background="?android:selectableItemBackground"
        android:drawablePadding="4dp"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="@string/back"
        android:textAllCaps="true"
        android:textColor="@color/black50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:drawableStartCompat="@drawable/ic_back_btn" />

    <TextView
        android:id="@+id/tvTitle"
        style="@style/TextViewBoldTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="@string/order_details"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvBack" />

    <TextView
        android:id="@+id/tvSubDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="22dp"
        android:fontFamily="@font/bariol_regular"
        android:text="@string/review_all_about_your_item"
        android:textAllCaps="false"
        android:textColor="@color/grey_error"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/down_shadow"
        app:layout_constraintTop_toBottomOf="@id/tvSubDetail" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginHorizontal="10dp"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ticket_background"/>


<!--            <androidx.cardview.widget.CardView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="0dp"-->
<!--                app:cardCornerRadius="8dp"-->
<!--                app:cardElevation="0dp"-->
<!--                app:cardUseCompatPadding="true"-->
<!--                app:layout_constraintTop_toTopOf="parent">-->

                <androidx.constraintlayout.widget.ConstraintLayout
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginHorizontal="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvOrderTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/bariol_regular"
                        android:padding="5dp"
                        android:text="@string/product_details"
                        android:textAllCaps="false"
                        android:textColor="@color/grey_error"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvImage"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="15dp"
                        app:cardCornerRadius="5dp"
                        app:layout_constraintBottom_toBottomOf="@id/tvSize"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tvItemName">

                        <ImageView
                            android:id="@+id/ivImage"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/profile_pic_placeholder" />


                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tvItemName"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="10dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="25dp"
                        android:fontFamily="@font/bariol_bold"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        app:layout_constraintStart_toEndOf="@id/cvImage"
                        app:layout_constraintTop_toBottomOf="@id/tvOrderTitle" />

                    <TextView
                        android:id="@+id/tvItemDesc"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="10dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/bariol_regular"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textColor="@color/grey_error"
                        android:textSize="15sp"
                        app:layout_constraintStart_toEndOf="@id/cvImage"
                        app:layout_constraintTop_toBottomOf="@id/tvItemName" />

                    <TextView
                        android:id="@+id/tvSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/bariol_regular"
                        android:text="@string/size"
                        android:textColor="@color/grey_error"
                        app:layout_constraintStart_toEndOf="@id/cvImage"
                        app:layout_constraintTop_toBottomOf="@id/tvItemDesc" />

                    <TextView
                        android:id="@+id/tvSizeValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/bariol_regular"
                        android:text="@string/dash"
                        android:textColor="@color/grey_error"
                        android:textSize="15sp"
                        app:layout_constraintStart_toEndOf="@id/tvSize"
                        app:layout_constraintTop_toBottomOf="@id/tvItemDesc" />


                    <View
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="@dimen/_15dp"
                        android:layout_marginTop="29dp"
                        android:background="#D6D6D6"
                        app:layout_constraintTop_toBottomOf="@id/cvImage" />

                    <TextView
                        android:id="@+id/tvDeliveryAddressTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/bariol_regular"
                        android:padding="5dp"
                        android:text="@string/delivery_address"
                        android:textAllCaps="false"
                        android:textColor="@color/grey_error"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/view2" />


                    <ImageView
                        android:id="@+id/ivSource"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="25dp"
                        android:src="@drawable/drawable_source"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvDeliveryAddressTitle" />

                    <ImageView
                        android:id="@+id/ivGray1"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/drawable_gray"
                        app:layout_constraintEnd_toEndOf="@id/ivSource"
                        app:layout_constraintStart_toStartOf="@id/ivSource"
                        app:layout_constraintTop_toBottomOf="@id/ivSource" />

                    <ImageView
                        android:id="@+id/ivGray2"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/drawable_gray"
                        app:layout_constraintEnd_toEndOf="@id/ivSource"
                        app:layout_constraintStart_toStartOf="@id/ivSource"
                        app:layout_constraintTop_toBottomOf="@id/ivGray1" />

                    <ImageView
                        android:id="@+id/ivGray3"
                        android:layout_width="8dp"
