                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/grey_error"
                        app:layout_constraintTop_toBottomOf="@id/ivDestination" />

                    <TextView
                        android:id="@+id/tvItemDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/bariol_regular"
                        android:padding="5dp"
                        android:text="@string/item_details"
                        android:textAllCaps="false"
                        android:textColor="@color/grey_error"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/view3" />

                    <TextView
                        android:id="@+id/tvQuantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/bariol_regular"
                        android:padding="5dp"
                        android:text="@string/quantity"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvItemDetails" />

                    <TextView
                        android:id="@+id/tvQuantityValue"
                        android:layout_width="wrap_content"
