<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/bg_18dp"
    android:layout_height="250dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivAlert"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_alert_success"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Success"
        android:textColor="@color/success_color"
        android:textSize="25sp"
        android:fontFamily="@font/bariol_bold"
        android:layout_marginTop="@dimen/_15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivAlert" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Errordfghsdghsdlkfniugfnfdsuibvnajdgbuaeigbiadgfnbiaueogdujgndakjgvneaiogeuign"
        android:textColor="@color/gray"
        android:textSize="15sp"
        android:layout_marginHorizontal="20dp"
        android:gravity="center"
        android:fontFamily="@font/bariol_regular"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />
    <TextView
        android:id="@+id/btnContinue"
        style="@style/Base.Widget.AppCompat.Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_weight="1.2"
        android:background="@drawable/bg_button_12dp"
        android:fontFamily="@font/bariol_bold"
        android:layout_marginVertical="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvDescription"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="Continue"
        android:backgroundTint="@color/success_color"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold" />
</androidx.constraintlayout.widget.ConstraintLayout>