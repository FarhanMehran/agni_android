<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap here to view likes or match"
        android:textColor="@color/white"
        android:layout_above="@id/btnOk"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_16sdp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/orange_pink"
        android:text="ok"
        android:layout_above="@id/circle"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_16sdp"
        />

    <com.agnidating.agni.utils.custom_view.CircleViewAndroid
        android:id="@+id/circle"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:elevation="@dimen/_6sdp"
        android:translationY="@dimen/_16sdp"
        />

</RelativeLayout>