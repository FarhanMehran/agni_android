<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.2"
            android:id="@+id/guideline"/>
        <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.28"
            android:id="@+id/guideline_second"/>
        <TextView
            android:id="@+id/tvSkip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_8"
            android:layout_marginTop="@dimen/dimen_14"
            android:text="@string/skip"
            android:textColor="@color/black00"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            android:gravity="right"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/ivThanks"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginEnd="@dimen/dimen_24"
            android:layout_marginStart="@dimen/dimen_24"
            android:layout_marginTop="12dp"
            app:srcCompat="@drawable/ic_image_thanks"
            app:layout_constraintBottom_toTopOf="@id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSkip"/>

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="@dimen/dimen_32"
            android:layout_marginRight="7dp"
            android:gravity="start"
            android:text="@string/thank_you_for_registering_with_h2d"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guideline_second" />

        <TextView
            android:id="@+id/tvInfos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_32"
            android:layout_marginStart="@dimen/dimen_32"
            android:layout_marginTop="30dp"
            android:text="@string/you_can_verify_your_account"
            android:textColor="@color/black00"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvWelcome" />


        <Button
            android:id="@+id/tvGetStarted"
            android:layout_width="200dp"
            android:layout_height="56dp"
            android:layout_marginBottom="@dimen/dimen_32"
            android:layout_marginEnd="@dimen/dimen_32"
            android:layout_marginStart="@dimen/dimen_32"
            android:layout_marginTop="30dp"
            android:background="@drawable/drawable_splash"
            android:gravity="center"
            android:text="@string/upload_your_documents"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvInfos" />
    </androidx.constraintlayout.widget.ConstraintLayout>
