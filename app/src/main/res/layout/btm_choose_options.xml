<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/tvChooseOptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Choose Option"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_15sdp"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvUnmatch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/unmatch"
            android:drawableStart="@drawable/ic_unmatch"
            android:drawablePadding="@dimen/_10sdp"
            android:layout_margin="@dimen/_15sdp"
            android:paddingTop="@dimen/_5sdp"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/_5sdp"
            android:textColor="@color/black"
            android:layout_marginEnd="@dimen/_10ssp"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvChooseOptions" />

        <TextView
            android:id="@+id/tvBlock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="BLOCK"
            android:layout_margin="@dimen/_15sdp"
            android:paddingTop="@dimen/_5sdp"
            android:drawableStart="@drawable/ic_block"
            android:drawablePadding="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/_5sdp"
            android:textColor="@color/black"
            android:layout_marginEnd="@dimen/_10ssp"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvUnmatch" />

        <TextView
            android:id="@+id/tvReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="REPORT"
            android:drawableStart="@drawable/ic_report"
            android:drawablePadding="@dimen/_10sdp"
            android:layout_margin="@dimen/_15sdp"
            android:paddingTop="@dimen/_5sdp"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/_5sdp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="@dimen/_10ssp"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvBlock" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</layout>