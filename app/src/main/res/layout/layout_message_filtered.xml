<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <TextView
        android:id="@+id/tv_message_filtered"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black50"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_margin="20dp"
        android:text="@string/message_filtered_message"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tv_terms_conditions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black00"
        android:textSize="18sp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="@string/terms_conditions"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintTop_toBottomOf="@id/tv_message_filtered"/>
    <TextView
        android:id="@+id/tv_ok"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_round_corner_green_bg"
        android:gravity="center"
        android:text="@string/ok"
        android:textAllCaps="true"
        android:padding="12dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_terms_conditions"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_ok"/>
</androidx.constraintlayout.widget.ConstraintLayout>