<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.settings.profile.profile.ProfileActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:elevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivBack1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_back_btn" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivProfilePic"
                android:layout_width="152dp"
                android:layout_height="152dp"
                android:layout_below="@+id/ivBack1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/profile_pic_placeholder"
                android:transitionName="ivProfilePic" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabProfilePic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/ivProfilePic"
                android:layout_alignBottom="@+id/ivProfilePic"
                android:src="@drawable/ic_camera_c"
                app:backgroundTint="@color/white"
                app:fabSize="mini" />
        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/tvBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bariol_regular"
        android:drawablePadding="4dp"
        android:gravity="center"
        android:padding="12dp"
        android:text="@string/back"
        android:textAllCaps="true"
        android:textColor="@color/black50"
        app:drawableStartCompat="@drawable/ic_back_btn" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvFirstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvCount"
                android:layout_marginStart="24dp"
                android:fontFamily="@font/bariol_regular"
                android:layout_marginTop="16dp"
                android:text="@string/first_name"
                android:textAllCaps="true"
                android:textColor="@color/black50"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/etFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvFirstName"
                android:layout_marginStart="@dimen/margin24"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/shape_edittext_bg"
                android:fontFamily="@font/bariol_regular"
                android:inputType="textPersonName"
                android:longClickable="false"
                android:maxLength="15"
                android:paddingBottom="8dp"
                android:singleLine="true"
                android:text=""
                android:enabled="false"
                android:textAllCaps="false"
                android:textColor="@color/black50"
                android:textIsSelectable="false"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvMemberSinceHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="56dp"
                android:fontFamily="@font/bariol_regular"
                android:text="@string/bio"
                android:textAllCaps="true"
                android:textColor="@color/black50"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/edtBio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvMemberSinceHeader"
                android:layout_marginStart="@dimen/margin24"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/shape_edittext_bg"
                android:fontFamily="@font/bariol_regular"
                android:inputType="textMultiLine"
                android:longClickable="false"
                android:maxLength="150"
                android:paddingBottom="8dp"
                android:textAllCaps="false"
                android:textColor="@color/black1"
                android:textIsSelectable="false"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/edtBio"
                android:layout_marginEnd="24dp"
                android:fontFamily="@font/bariol_regular"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="2dp"
                android:text="@string/_0_150"
                android:textAllCaps="true"
                android:textColor="@color/black50"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvLastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etFirstName"
                android:fontFamily="@font/bariol_regular"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:text="@string/last_name"
                android:textAllCaps="true"
                android:textColor="@color/black50"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/etLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvLastName"
                android:layout_marginStart="@dimen/margin24"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/shape_edittext_bg"
                android:inputType="textPersonName"
                android:longClickable="false"
                android:maxLength="15"
                android:enabled="false"
                android:paddingBottom="8dp"
                android:singleLine="true"
                android:text=""
                android:textAllCaps="false"
                android:textColor="@color/black50"
                android:textIsSelectable="false"

                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:fontFamily="@font/bariol_regular"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etLastName"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:text="@string/email"
                android:textAllCaps="true"
                android:textColor="@color/black50"
                android:textSize="12sp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvEmail"
                android:layout_marginStart="@dimen/margin24"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/bariol_regular"
                android:layout_marginEnd="24dp"
                android:background="@drawable/shape_edittext_bg"
                android:maxLines="1"
                android:paddingBottom="8dp"
                android:singleLine="true"
                android:textAllCaps="false"
                android:textColor="@color/black1"
                android:textSize="16sp" />


            <LinearLayout
                android:id="@+id/llNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etEmail"
                android:paddingStart="@dimen/sp_24">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/etEmail"
                        android:textAllCaps="true"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/bariol_regular"
                        android:text="@string/code"
                        android:layout_marginEnd="10dp"
                        android:layout_gravity="end"
                        android:textColor="@color/black50"
                        android:textSize="12sp" />
                    <com.hbb20.CountryCodePicker
                        android:id="@+id/ccp"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/bariol_regular"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        app:ccpDialog_fastScroller_bubbleColor="@color/colorPrimary"
                        app:ccpDialog_fastScroller_handleColor="@color/colorPrimary"
                        app:ccpDialog_searchEditTextTint="@color/colorPrimary"
                        app:ccp_autoDetectCountry="true"
                        app:ccp_contentColor="@color/black"
                        app:ccp_showArrow="false"
                        app:ccp_showNameCode="false"
                        app:ccp_textSize="16sp" />

                </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginStart="@dimen/margin24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/etEmail"
                    android:textAllCaps="true"
                    android:layout_marginTop="16dp"
                    android:text="@string/phone_number"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/bariol_regular"
                    android:layout_gravity="start"
                    android:textColor="@color/black50"
                    android:textSize="12sp" />
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/tvPhoneNo"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/bariol_regular"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/shape_edittext_bg"
                    android:inputType="number"
                    android:maxLines="1"
                    android:paddingBottom="8dp"
                    android:singleLine="true"
                    android:textAllCaps="false"
                    android:textColor="@color/black1"
                    android:textSize="16sp" />
            </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/tv_identity_verification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/llNumber"
                android:layout_marginStart="@dimen/margin24"
                android:layout_marginTop="55dp"
                android:layout_marginEnd="@dimen/margin24"
                android:background="@drawable/shape_round_corner_green_bg"
                android:fontFamily="@font/bariol_bold"
                android:gravity="center"
                android:visibility="gone"
                android:padding="14dp"
                android:text="@string/identity_verification"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_identity_verification"
                android:layout_marginStart="@dimen/margin24"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="@dimen/margin24"
                android:layout_marginBottom="@dimen/margin24"
                android:background="@drawable/shape_switch_shopper_btn"
                android:gravity="center"
                android:padding="14dp"
                android:text="@string/save_changes"
                android:fontFamily="@font/bariol_bold"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>