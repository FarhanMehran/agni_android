<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@color/transparent"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/info_dialog"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            android:padding="@dimen/_15dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvTitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bariol_bold"
                android:text="I buy online,\ntraveler delivers"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/tvType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bariol_regular"
                android:text="Delivery Only"
                android:layout_marginTop="@dimen/dimen_8"
                android:textColor="@color/black50"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTitle1" />

            <ImageView
                android:id="@+id/ivTypeImage"
                android:layout_width="120dp"
                android:layout_height="110dp"
                android:layout_column="1"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_bottom_popup"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTitle1"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bariol_regular"
                android:text="Bullets title"
                android:layout_marginTop="@dimen/dimen_8"
                android:textColor="@color/chat_list_subtitle"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivTypeImage" />

            <ImageView
                android:id="@+id/ivDot1"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_column="1"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="30dp"
                android:src="@drawable/dot"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTitle"
                app:layout_constraintTop_toTopOf="@id/tvDetail1" />

            <TextView
                android:id="@+id/tvDetail1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/bariol_regular"
                android:text="Information 1"
                android:textColor="@color/chat_list_subtitle"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/ivDot1"
                app:layout_constraintTop_toBottomOf="@id/tvTitle" />

            <ImageView
                android:id="@+id/ivDot2"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_column="1"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/bariol_regular"
                android:layout_marginStart="30dp"
                android:src="@drawable/dot"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvDetail1"
                app:layout_constraintTop_toTopOf="@id/tvDetail2" />

            <TextView
                android:id="@+id/tvDetail2"
                android:layout_width="0dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/bariol_regular"
                android:text="Information 2"
                android:textColor="@color/chat_list_subtitle"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/ivDot2"
                app:layout_constraintTop_toBottomOf="@id/tvDetail1" />

            <ImageView
                android:id="@+id/ivDot3"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_column="1"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="30dp"
                android:src="@drawable/dot"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvDetail2"
                app:layout_constraintTop_toTopOf="@id/tvDetail3" />

            <TextView
                android:id="@+id/tvDetail3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="30dp"
                android:fontFamily="@font/bariol_regular"
                android:text="Information 3"
                android:textColor="@color/chat_list_subtitle"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/ivDot3"
                app:layout_constraintTop_toBottomOf="@id/tvDetail2" />

            <ImageView
                android:id="@+id/ivDot4"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_column="1"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="30dp"
                android:src="@drawable/dot"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvDetail3"
                app:layout_constraintTop_toTopOf="@id/tvDetail4" />

            <TextView
                android:id="@+id/tvDetail4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="30dp"
                android:fontFamily="@font/bariol_regular"
                android:text="Information 4"
                android:textColor="@color/chat_list_subtitle"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/ivDot4"
                app:layout_constraintTop_toBottomOf="@id/tvDetail3" />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>